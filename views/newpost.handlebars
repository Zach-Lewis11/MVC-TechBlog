<div class="card">
    <h2>Create a New Post!</h2>
    <form id="new-post" class="card-body">
        <label for="post-title" class="label">Title</label>
        <input type="text" name="post-title" value="{{post.title}}" class="input">
        <label for="post-body" class="label">Content</label>
        <textarea name="post-body" class="input">{{post.body}}</textarea>
        <button type="submit" class="btn">Create Post</button>
    </form>
</div>

<script src="/js/new-post.js"></script>