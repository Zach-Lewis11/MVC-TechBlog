<div class="card">
    <h2>{{post.title}}</h2>
    <h3>Post created by {{User.username}}</h3>
    <p class="card-body">
        {{post.body}}
    </p>
</div>

{{#if post.Comments}}
    <div class="card">
        <h3>Comments</h3>
        <div class="card-body">
            {{#each post.Comments}}
                <p>
                    {{body}}
                </p>
                <p>By {{User.username}}</p>
            {{/each}}
        </div>
    </div>
{{/if}}

<div class="card">
    <form id="new-comment">
         <input type="hidden" name="post-id" value="{{post.id}}" />
         <label for="comment-body" class="label">Comment</label>
         <textarea name="comment-body" class="input"></textarea>
         <button type="submit" class="btn">Add Comment</button>
    </form>
</div>

<script src="/js/comment.js"></script>